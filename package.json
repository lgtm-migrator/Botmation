{
  "name": "botmation",
  "version": "1.0.0",
  "description": "A Puppeteer Wrapper that provides a declarative syntax for web crawler automation",
  "main": "./build/mationbot/module.js",
  "types": "./build/mationbot/module.d.ts",
  "scripts": {
    "build": "tsc",
    "playground": "node .",
    "botmation:": "npm run build && npm run playground",
    "createconfigfile": "node ./scripts/create-config.cli.js",
    "createbaseconfigfile": "node ./scripts/create-config.cli.js baseonly",
    "postinstall": "npm run createconfigfile",
    "example/instagram": "npm run build && node ./build/examples/instagram.js",
    "example/puppeteer-cluster": "npm run build && node ./build/examples/puppeteer-cluster.js",
    "example/screenshots": "npm run build && node ./build/examples/screenshots.js",
    "tests": "npm run test",
    "test": "jest",
    "localtestsite": "./node_modules/http-server/bin/http-server ./src/tests/server"
  },
  "keywords": [
    "social",
    "automation",
    "login",
    "likes",
    "reporting",
    "tool",
    "bot",
    "crawler"
  ],
  "author": "Michael Lage",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "puppeteer": "^2.0.0",
    "puppeteer-cluster": "^0.18.0",
    "skip": "0.0.13"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/node": "^13.1.8",
    "@types/puppeteer": "^2.0.0",
    "http-server": "^0.12.1",
    "jest": "^25.1.0",
    "jest-puppeteer": "^4.4.0",
    "module-alias": "^2.2.2",
    "readline-sync": "^1.4.10",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  },
  "_moduleAliases": {
    "@mationbot": "./build/botmation",
    "@botmation": "./build/botmation",
    "@helpers": "./build/helpers",
    "@config": "./build/config.js",
    "@bots": "./build/bots"
  }
}
