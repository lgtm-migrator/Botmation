{
  "name": "botmation",
  "version": "0.0.1",
  "description": "A Puppeteer Library that provides a declarative syntax for web crawler automation",
  "main": "./build/playground_bot.js",
  "scripts": {
    "build": "tsc",
    "playground": "node .",
    "botmation:": "npm run build && npm run playground",
    "createconfigfile": "node ./scripts/create-config.cli.js",
    "postinstall": "npm run createconfigfile",
    "example/instagram": "node ./build/examples/instagram.js",
    "example/puppeteer-cluster": "node ./build/examples/puppeteer-cluster.js",
    "example/screenshots": "node ./build/examples/screenshots.js"
  },
  "keywords": [
    "social",
    "automation",
    "login",
    "likes",
    "reporting",
    "tool",
    "bot",
    "crawler"
  ],
  "author": "Michael Lage",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "puppeteer": "^2.0.0",
    "puppeteer-cluster": "^0.18.0"
  },
  "devDependencies": {
    "@types/node": "^13.1.8",
    "@types/puppeteer": "^2.0.0",
    "module-alias": "^2.2.2",
    "readline-sync": "^1.4.10",
    "typescript": "^3.7.5"
  },
  "_moduleAliases": {
    "@mationbot": "./build/mationbot",
    "@helpers": "./build/helpers",
    "@config": "./build/config.js",
    "@bots": "./build/bots"
  }
}
