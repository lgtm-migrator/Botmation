{
  "name": "botmation",
  "version": "0.1.0",
  "description": "A Puppeteer Wrapper that provides a declarative syntax for web crawler automation",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dist": "./node_modules/webpack/bin/webpack.js",
    "build": "./node_modules/webpack/bin/webpack.js --config webpack.build.config.js",
    "playground": "node ./build/playground_bot.js",
    "examples/instagram": "node ./build/examples/instagram.js",
    "examples/puppeteer-cluster": "node ./build/examples/puppeteer-cluster.js",
    "examples/screenshots": "node ./build/examples/screenshots.js",
    "test": "jest",
    "localtestsite": "./node_modules/http-server/bin/http-server ./src/tests/server"
  },
  "keywords": [
    "social",
    "automation",
    "login",
    "likes",
    "reporting",
    "tool",
    "bot",
    "crawler",
    "puppeteer",
    "declarative",
    "imperative"
  ],
  "author": "Michael Lage",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "puppeteer": "^2.0.0",
    "puppeteer-cluster": "^0.18.0",
    "skip": "0.0.13"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/node": "^13.1.8",
    "@types/puppeteer": "^2.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "http-server": "^0.12.1",
    "jest": "^25.1.0",
    "jest-puppeteer": "^4.4.0",
    "ts-jest": "^25.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  }
}
