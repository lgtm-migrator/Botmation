{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "@mationbot": ["mationbot/index"],
      "@mationbot/*": ["mationbot/*"],
      "@helpers/*": ["helpers/*"],
      "@config": ["config"],
      "@bots/*": ["bots/*"]
    }
  },
  "exclude": [
    "node_modules",
    "assets",
    "scripts",
    "build",
    "jest-puppeteer.config.js",
    "jest.config.js"
  ]
}