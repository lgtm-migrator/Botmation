{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "@botmation": ["botmation/index"],
      "@botmation/*": ["botmation/*"],
      "@helpers/*": ["botmation/helpers/*"],
      "@config": ["config"],
      "@bots/*": ["botmation/bots/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": [
    "node_modules",
    "assets",
    "scripts",
    "build",
    // "src/tests", // leave out for the IDE, helps module alias based imports
    "jest-puppeteer.config.js",
    "jest.config.js"
  ]
}