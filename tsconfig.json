{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "@botmation": ["botmation/index"],
      "@botmation/*": ["botmation/*"],
      "@helpers/*": ["helpers/*"],
      "@selectors": ["selectors"],
      "@config": ["config"],
      "@bots/*": ["bots/*"]
    }
  }
}