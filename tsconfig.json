{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "outDir": "./dist/",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "botmation/*": ["botmation/*"],
      "tests/*": ["tests/*"]
    }
  },
  "exclude": [
    "node_modules",
    "assets",
    "scripts",
    "dist",
    "src/examples",
    "jest-puppeteer.config.js",
    "jest.config.js",
    "webpack.config.js"
  ],
  "include": [
    "src/botmation/**/*",
  ]
}
