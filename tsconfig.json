{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "outDir": "./dist/",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "@botmation": ["botmation/index"],
      "@botmation/*": ["botmation/*"],
      "@helpers/*": ["botmation/helpers/*"],
      "@config": ["config"],
      "@bots/*": ["botmation/bots/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": [
    "node_modules",
    "assets",
    "scripts",
    "dist",
    "src/tests",
    "jest-puppeteer.config.js",
    "jest.config.js"
  ]
}
